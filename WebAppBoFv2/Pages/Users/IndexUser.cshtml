@page
@model WebAppBoFv2.IndexUserModel

@{
    ViewData["Title"] = "User";
}

<h1>Users</h1>

<p>
    <a asp-page="CreateUser">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].EmailReg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailReg)
            </td>
            <td>
                <a asp-page="./EditUser" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./DetailsUser" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./DeleteUser" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
